
@{
    ViewData["Title"] = "404 Page";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


      <!-- 404 Page -->
      <section class="py-5 bg-white border-top border-bottom">
         <div class="container">
            <div class="row py-lg-5">
               <div class="col-lg-8 col-md-8 mx-auto text-center">
                  <h1><img class="img-fluid" src="~/FrontAssets/images/404.png" alt="404"></h1>
                  <h1>Sorry! Page not found.</h1>
                  <p class="land">Unfortunately the page you are looking for has been moved or deleted.</p>
                  <div class="mt-5">
                     <a href="@Url.Action("Index","Home")" class="btn btn-success"><i class="mdi mdi-home"></i> Back to Home </a>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- End 404 Page -->
